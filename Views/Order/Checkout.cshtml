@model Order
  
    <h3>One step more to complete your order!</h3>
    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="Name" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Adress1" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Adress1" class="form-control" />
                <span asp-validation-for="Adress1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Adress2" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Adress2" class="form-control" />
                <span asp-validation-for="Adress2" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Cep" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="City" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="City" class="form-control" value="Lins" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="State" class="form-control" value="New York" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="col-md-4 control-label"></label>
            <div class="col-md-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-5">
                <input class="btn btn-success" type="submit" value="Close Order" />
            </div>
        </div>
    </form>


