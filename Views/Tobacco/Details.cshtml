@model Tobacco

<div class="container marginTop">
    <div class="row">
        <div class="card border-0">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImageURL" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-block">
                <!--Title-->
                <h2 class="card-title">@Model.Name</h2>
                <!--Text-->
                <p class="card-text"><h5>@Model.LongDescription</h5></p>
                <p class="btn btn-group align-content-lg-end" >
                    <a asp-controller="Tobacco" asp-action="List" class="btn btn-outline-info">All Tobaccos</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="Cart" asp-action="AddItemCart" asp-route-tobaccoId="@Model.TobaccoId">
                        Add @Model.Name to cart
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>


